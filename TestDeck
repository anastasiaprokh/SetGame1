public class TestDeck
{
  public static void main(String[] args)
  {
    Deck deck = new Deck();
    deck.add(new Card(0));
    deck.add(new Card(1));
    deck.add(new Card(2));
    System.out.println(deck);
    deck.shuffle();
    System.out.println(deck);
    deck.sort();
    System.out.println(deck);
    for (int i = 0; i < deck.getNumCards(); i++)
    {
      deck.takeTop();
      System.out.println(deck);
    }    
  }
}
